.row.row-30.row-isotope.isotope(data-isotope-layout='masonry', data-isotope-group='gallery', data-lightgallery='group')
	.col-sm-6.col-md-4.col-xl-3.isotope-item(data-filter='Type 3'): .oh-desktop
		+thumbnail-mary({
			mod: 'thumbnail-md',
			nameImg: 'fullwidth-masonry-gallery',
			sizeImg: '420x330',
			numberImg: '1',
			nameImgOriginal: 'grid-gallery-1'
		}).wow.slideInDown
	.col-sm-6.col-md-4.col-xl-3.isotope-item(data-filter='Type 2'): .oh-desktop
		+thumbnail-mary({
			mod: 'thumbnail-md',
			nameImg: 'fullwidth-masonry-gallery',
			sizeImg: '420x330',
			numberImg: '2',
			nameImgOriginal: 'grid-gallery-3'
		}).wow.slideInUp
	.col-md-4.col-xl-3.isotope-item(data-filter='Type 1'): .oh-desktop
