// Post Sidebar
.post-sidebar.post-sidebar-inset
  .row.row-lg.row-60
    .col-sm-6.col-lg-12
      .post-sidebar-item
        // RD Search Form
        form.rd-search.form-search.form-post-search(action='search-results.html', method='GET')
          .form-wrap
            label.form-label(for="search-form") Search the blog...
            input#search-form.form-input(type='text', name='s', autocomplete='off')
            button(type="submit").button-search.fl-bigmug-line-search74

      .post-sidebar-item
        h5 Categories
        .post-sidebar-item-inset
          ul.list.list-categories
            li: a(href='#').active All Categories
            li: a(href='#') Programming
            li: a(href='#') Development
            li: a(href='#') Tutorials
            li: a(href='#') Software

      .post-sidebar-item
        h5 Popular posts
        .post-sidebar-item-inset
          +post-minimal({
            img: 'post-8-232x138',
            title: 'Key Considerations and Warnings of iPaaS'
          })
          +post-minimal({
            img: 'post-9-232x138',
            title: 'Usage of Hibernate Query Language (HQL)'
          })

    .col-sm-6.col-lg-12
      .post-sidebar-item
        h5 Comments
        .post-sidebar-item-inset
          +quote-minimal({
            text: 'Thank you for this article! It is a real time-saver for me.',
            author: 'Jessica Brown',
            source: 'Cloud Software Solutions'
          })
          +quote-minimal({
            text: 'These software development tips helped me a lot, thank you for sharing!',
            author: 'Adam Williams',
            source: 'Creating Better Software'
          })

      .post-sidebar-item
        h5 Popular tags
        .post-sidebar-item-inset
          .group-xs.group-middle.justify-content-start
            +badge({ mod: 'badge-white', text: 'development' })
            +badge({ mod: 'badge-white', text: 'news' })
            +badge({ mod: 'badge-white', text: 'programming' })
            +badge({ mod: 'badge-white', text: 'UI' })
            +badge({ mod: 'badge-white', text: 'Software' })
            +badge({ mod: 'badge-white', text: 'Database' })

      .post-sidebar-item
        h5 Newsletter
        .post-sidebar-item-inset
          // RD Mailform
          form.rd-form.rd-mailform(data-form-output="form-output-global", data-form-type='subscribe', method='post', action='bat/rd-mailform.php')
            .form-wrap
              input.form-input(id="subscribe-form-4-email" type="email" name="email" data-constraints="@Email @Required")
              label.form-label(for="subscribe-form-4-email") Enter Your E-mail
            .form-button
              button.button.button-block.button-primary.button-pipaluk(type="submit") Subscribe
