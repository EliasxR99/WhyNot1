mixin thumbnail-whynot(obj)
  // Thumbnail personalizado
  article.thumbnail.thumbnail-classic(class=obj.mod)
    .thumbnail-classic-figure
      +imageFromJson({name: obj.image, size: obj.sizeImg, className: ''})

    .thumbnail-classic-caption
      .thumbnail-classic-title-wrap
        h5.thumbnail-classic-title: a(target='_blank', href=obj.link)= obj.title
      p.thumbnail-classic-text= obj.description

mixin thumbnail-classic(obj)
  // Thumbnail Classic
  article.thumbnail.thumbnail-classic(class=obj.mod)
    .thumbnail-classic-figure
      +jpg(obj.nameImg + '-' + obj.numberImg + '-' + obj.sizeImg)

    .thumbnail-classic-caption
      .thumbnail-classic-title-wrap
        a.icon.fl-bigmug-line-zoom60(href='images/' + (obj.nameImgOriginal ? obj.nameImgOriginal : obj.nameImg + '-' + (obj.numberImgOriginal ? obj.numberImgOriginal : obj.numberImg)) + '-1200x800-original.jpg' data-lightgallery='item')
          +jpg(obj.nameImg + '-' + obj.numberImg + '-' + obj.sizeImg)
        h5.thumbnail-classic-title: a(href='#')= 'Project #' + (obj.numberProject ? obj.numberProject : obj.numberImg)
      p.thumbnail-classic-text We work hard on every app to deliver top-notch features with great UI that you wonâ€™t find anywhere else.

