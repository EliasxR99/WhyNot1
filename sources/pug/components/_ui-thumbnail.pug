mixin thumbnail-instafeed(obj)
  // Thumbnail Instafeed
  article.thumbnail.thumbnail-mary(class=obj.className)&attributes(attributes)
    .thumbnail-mary-figure
      img(src='images/' + obj.img + '.jpg', alt='', data-images-low_resolution-url='src')
    .thumbnail-mary-caption
      a.icon.fl-bigmug-line-zoom60(href='images/' + obj.nameImgOriginal + '-1200x800-original.jpg' data-images-standard_resolution-url='href' data-lightgallery='item')
        img(src='images/' + obj.img + '.jpg', alt='', data-images-low_resolution-url='src')

mixin project-minimal(obj)
  .project-minimal
    .unit.unit-spacing-lg.align-items-center(class=obj.unit)
      .unit-left: a.project-minimal-figure(href=obj.href): +jpg(obj.img)
      .unit-body
        p.project-minimal-text=obj.text
        .project-minimal-title: a(href=obj.href)=obj.title