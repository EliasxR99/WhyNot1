        a.button.button-md.button-white(href='#') Read more

mixin thumbnail-mary(obj)
  // Thumbnail Classic
  article.thumbnail.thumbnail-mary(class=obj.mod)&attributes(attributes)
    .thumbnail-mary-figure: +jpg(obj.nameImg + '-' + obj.numberImg + '-' + obj.sizeImg)

    .thumbnail-mary-caption
      a.icon.fl-bigmug-line-zoom60(href='images/' + (obj.nameImgOriginal ? obj.nameImgOriginal : obj.nameImg + '-' + (obj.numberImgOriginal ? obj.numberImgOriginal : obj.numberImg)) + '-1200x800-original.jpg' data-lightgallery='item')
        +jpg(obj.nameImg + '-' + obj.numberImg + '-' + obj.sizeImg)
      if(obj.titleNone == true)
      else
        if(obj.thumbnailSmall == true)
          h6.thumbnail-mary-title: a(href='#')= 'Project #' + (obj.numberProject ? obj.numberProject : obj.numberImg)
        else
          h5.thumbnail-mary-title: a(href='#')= 'Project #' + (obj.numberProject ? obj.numberProject : obj.numberImg)
  if(obj.nameProject)
    .thumbnail-mary-description
      h4.thumbnail-mary-project: a(href='#')=obj.nameProject
      span.thumbnail-mary-decor
      h5.thumbnail-mary-time
        time(datetime=obj.datetime)=obj.time

